{
  "name": "compare",
  "displayName": "Compare text",
  "description": "See diff of two tabs, even if they're not saved",
  "repository": {
    "url": "https://github.com/jozefchmelar/comparetabs"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.71.0"
  },
  "author": {
    "name": "Jozef Chmelar, Gokce Aksu, Aleksei Gruntov"
  },
  "publisher": "JozefChmelar",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:compare.compareTabs",
    "onCommand:compare.swapComparedTabs"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "compare.compareTabs",
        "title": "Compare with current"
      },
      {
        "command": "compare.swapComparedTabs",
        "title": "Swap tabs"
      }
    ],
    "menus" : {
      "editor/title/context": [
        {
          "command": "compare.compareTabs",
          "group": "1_diff"
        },
        {
          "command": "compare.swapComparedTabs",
          "group": "1_diff",
          "when": "activeEditor == workbench.editors.textDiffEditor"
        }
      ],
        "editor":[
        {
          "command": "compare.swapComparedTabs",
          "group": "1_diff",
          "when": "isInDiffEditor"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}
